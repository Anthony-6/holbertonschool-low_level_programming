#include "main.h"
/**
 * @brief 
 * 
 * 
 * 
 */
int create_file(const char *filename, char *text_content)
{
    int fd;

    if (filename == NULL)
    return (-1);

    fd = open(filename, O_RDONLY | O_WRONLY | O_WRONLY, 0600);
    if (fd == -1)
    return (-1);

    if (text_content)
    write(fd, text_content, _strlen(text_content));

close (fd);
return (1);
}
/**
 * @brief 
 * 
 * @param s 
 * @return int 
 */

int _strlen(const char *s)
{
	int c;

	for (c = 0; s[c] != '\0'; c++)
		;
	return (c);
}